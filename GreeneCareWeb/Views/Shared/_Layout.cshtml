<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Greene Care Website </title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    @*<link rel="stylesheet" href="~/GreeneCareWeb.styles.css" asp-append-version="true" />*@
    <script src="https://cdn.tailwindcss.com"></script>
    <script>tailwind.config = {
    content: ['./*.html'],
    theme: {
        screens: {
            sm: '480px',
            md: '768px',
            lg: '976px',
            // xl: '1440px',
        },
        extend: {
            colors: {
                colorLightYellow: '#FFFBEE',
                colorLintYellow: '#FFF9E9',
                colorBlue: '#2B6BF3',
                colorDeepBlue: '#021C54',
                colorGray: '#EFF4FF',
                colorDeepYellow: '#FFD456',
                colorDark: '#555555',
                colorDeeperBlue: '#0A142F',
            },
            fontFamily: {
                sora: ['Sen'],
            },
        },
    },
    plugins: [],
        }</script>
</head>
<body>
    <nav class=" md:px-10 px-6 bg-[#f9f9f9] border-[3px] sticky top-0 z-30">
        <!-- Flex container -->
        <div class="flex items-center justify-between">
            <!-- logo -->
            <div class="pt-2 md:ml-0 -ml-5 mb-2">
                GreneCare Home
            </div>
            <!-- Menu -->
            <div class="hidden space-x-10 md:flex mr-5">
                <a asp-controller="Home" asp-action="Index" class="font-sora text-colorDeepYellow font-medium hover:text-colorBlue">Home</a>
                <a asp-controller="Home" asp-action="Support" class="font-sora text-gray-900 font-medium hover:text-colorDeepYellow">Support Ticket</a>
            </div>
            <!-- Get started buttom -->
            <!-- <a class="hidden md:flex bg-colorBlue p-3 rounded-lg text-white hover:text-black hover:bg-colorDeepYellow text-center w-30" href="signin.html">Get Started</a> -->
            <button id="menu_btn" class="block mr-8 md:mr-0 hamburger md:hidden focus:outline-none">
                <span class="hamburger-top"></span>
                <span class="hamburger-middle"></span>
                <span class="hamburger-bottom"></span>
            </button>
        </div>
        <!-- Mobile Menu -->
        <div id="nav_menu" class="absolute hidden flex-col items-center self-end py-8 mt-2 space-y-6 font-bold bg-white sm:w-auto sm:self-center left-2 right-6 drop-shadow-md">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Support">Support</a>

        </div>
     </nav>

        <div class="">
            <div class="pb-3">
                @RenderBody()
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - GreeneCareWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

